
<application>
<name>SFMfiltAPP</name>

		<dependencies>
				<port>/icub/camcalib/left/out</port>
				<port>/icub/camcalib/right/out</port>
				<port>/iKinGazeCtrl/rpc</port>
		</dependencies>

		<module>
			<name>SFMfilt</name>
			<parameters>--name SFMfilt</parameters>
			<node>gpu-node</node>
			<tag>SFMfilt</tag>
        </module>

		<module>
			<name>yarpview</name>
			<parameters>--name /matchViewerFilt --x 0</parameters>
			<node>console</node>
			<tag>yarpviewTag</tag>
        </module>

		<module>
			<name>yarpview</name>
			<parameters>--name /dispViewerFilt --x 330</parameters>
			<node>console</node>
			<tag>yarpviewTag</tag>
        </module>


		<connection>
            <from>/icub/camcalib/right/out</from>
            <to>/SFMfilt/right:i</to>
            <protocol>tcp</protocol>
        </connection>

		<connection>
            <from>/icub/camcalib/left/out</from>
            <to>/SFMfilt/left:i</to>
            <protocol>tcp</protocol>
        </connection>

		<connection>
            <from>/SFMfilt/match:o</from>
            <to>/matchViewerFilt</to>
            <protocol>tcp</protocol>
        </connection>

		<connection>
            <from>/SFMfilt/disp:o</from>
            <to>/dispViewerFilt</to>
            <protocol>tcp</protocol>
        </connection>

</application>
